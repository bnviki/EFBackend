link(rel='stylesheet', href='css/search.css')
.col-md-8.col-md-offset-2
    .row
        .col-md-12.text-center.heading-banner
            label Search results
    .row
        .col-md-12
            .userbox.pull-left(ng-repeat='user in results')
                .row
                    .col-md-3
                        img.pull-left(ng-src='{{user.picture}}', style='height: 60px; width:60px;')
                        .btn.btn-primary.btn-sm(ng-click='sendChatRequest(user)') chat
                    .col-md-9
                        label(style='margin-bottom:0px;') {{user.displayname}}
                        p {{user.description}}
                        a(ng-href="{{'/' + user.username}}") {{'www.mpeers.com/' + user.username}}
